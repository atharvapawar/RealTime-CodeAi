{
  "name": "realtime-ai-editor",
  "displayName": "RealTime AI Editor",
  "description": "AI-powered code assistant with daily-updated Next.js/Tailwind documentation",
  "version": "0.0.2",
  "publisher": "AtharvPawar",
  "repository": {
    "type": "git",
    "url": "https://github.com/atharvapawar/RealTime-CodeAi.git"
  },
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Extension Packs"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "realtime-ai-editor.openAssistant",
        "title": "RealTime AI Editor: Open Assistant"
      },
      {
        "command": "realtime-ai-editor.refreshDocs",
        "title": "RealTime AI Editor: Refresh Documentation"
      },
      {
        "command": "realtime-ai-editor.getContextualHelp",
        "title": "RealTime AI Editor: Get Contextual AI Help"
      },
      {
        "command": "realtime-ai-editor.getCurrentContext",
        "title": "RealTime AI Editor: Show Current Context"
      },
      {
        "command": "realtime-ai-editor.getCodeSuggestions",
        "title": "RealTime AI Editor: Get Code Suggestions"
      },
      {
        "command": "realtime-ai-editor.searchDocs",
        "title": "RealTime AI Editor: Search Documentation"
      },
      {
        "command": "realtime-ai-editor.openSettings",
        "title": "RealTime AI Editor: Open Settings"
      }
    ],
    "keybindings": [
      {
        "command": "realtime-ai-editor.openAssistant",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      },
      {
        "command": "realtime-ai-editor.getContextualHelp",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "when": "editorTextFocus"
      },
      {
        "command": "realtime-ai-editor.getCurrentContext",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      },
      {
        "command": "realtime-ai-editor.getCodeSuggestions",
        "key": "ctrl+shift+;",
        "mac": "cmd+shift+;",
        "when": "editorTextFocus"
      },
      {
        "command": "realtime-ai-editor.searchDocs",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "RealTime AI Editor",
      "properties": {
        "realtimeAiEditor.telemetryEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enables anonymous telemetry for feature usage and error reporting to improve the extension."
        },
        "realtimeAiEditor.contextDepth": {
          "type": "string",
          "enum": [
            "file",
            "project",
            "workspace"
          ],
          "default": "file",
          "description": "Controls how much context the assistant uses: current file, project folder, or entire workspace."
        }
      }
    }
  },
  "scripts": {
    "package": "vsce package",
    "publish": "vsce publish",
    "watch": "code --extensionDevelopmentPath=.",
    "test": "node ./tests/run-tests.js"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.35",
    "axios": "^1.6.7",
    "cheerio": "^1.0.0-rc.12",
    "chromadb": "^1.8.1",
    "highlight.js": "^11.11.1",
    "marked": "^11.2.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0"
  },
  "icon": "icon.png",
  "license": "MIT"
}
